{
  "name": "chika-server",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "start": "nest start",
    "start:dev": "dotenv -e .env.development -- yarn start --watch",
    "start:debug": "dotenv -e .env.development -- yarn start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,tests}/**/*.ts\" --fix",
    "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\"",
    "docker:up": "docker-compose up -d && yarn db:push && yarn db:seed",
    "docker:down": "docker-compose down",
    "db:push": "dotenv -e .env.development -- npx prisma db push",
    "db:seed": "dotenv -e .env.development -- npx prisma db seed --preview-feature",
    "db:migrate": "dotenv -e .env.development -- npx prisma migrate dev",
    "test": "dotenv -e .env.test -- jest -i --watch",
    "test:e2e": "dotenv -e .env.test -- jest --watch -i --config ./jest-e2e.json",
    "prepare": "husky install"
  },
  "dependencies": {
    "@nestjs/common": "^7.6.15",
    "@nestjs/config": "^0.6.3",
    "@nestjs/core": "^7.6.15",
    "@nestjs/graphql": "^7.10.6",
    "@nestjs/passport": "^7.1.5",
    "@nestjs/platform-express": "^7.6.15",
    "@prisma/client": "2.25.0",
    "apollo-server-express": "^2.25.1",
    "dotenv": "^10.0.0",
    "graphql": "^15.5.0",
    "graphql-tools": "^7.0.5",
    "ioredis": "^4.27.6",
    "passport": "^0.4.1",
    "passport-http-bearer": "^1.0.1",
    "pg": "^8.6.0",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^6.6.6"
  },
  "devDependencies": {
    "@nestjs/cli": "^7.6.0",
    "@nestjs/schematics": "^7.3.0",
    "@nestjs/testing": "^7.6.15",
    "@types/express": "^4.17.11",
    "@types/ioredis": "^4.26.4",
    "@types/jest": "^26.0.22",
    "@types/node": "^14.14.36",
    "@types/passport-http-bearer": "^1.0.36",
    "@types/supertest": "^2.0.10",
    "@typescript-eslint/eslint-plugin": "^4.19.0",
    "@typescript-eslint/parser": "^4.19.0",
    "dotenv-cli": "^4.0.0",
    "eslint": "^7.22.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-prettier": "^3.3.1",
    "husky": "^6.0.0",
    "jest": "^26.6.3",
    "jest-mock-extended": "^1.0.16",
    "lint-staged": "^11.0.0",
    "prettier": "^2.2.1",
    "prisma": "2.25.0",
    "supertest": "^6.1.3",
    "ts-jest": "^26.5.4",
    "ts-loader": "^8.0.18",
    "ts-node": "^9.1.1",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^4.2.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "./",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "./coverage",
    "testEnvironment": "node"
  },
  "lint-staged": {
    "{src,apps,libs,tests}/**/*.ts": [
      "yarn lint",
      "yarn format"
    ]
  }
}
